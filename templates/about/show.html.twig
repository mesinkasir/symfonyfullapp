{% extends 'base.html.twig' %}
{% block title %}{{ about.title }}{% endblock %}
{% block fbtitle %}{{ about.title }}{% endblock %}
{% block twtitle %}{{ about.title }}{% endblock %}
{% block ogtitle %}{{ about.title }}{% endblock %}
{% block description %}{{ about.description}}{% endblock %}
{% block fbdescription %}{{ about.description}}{% endblock %}
{% block twdescription %}{{ about.description}}{% endblock %}
{% block ogdescription %}{{ about.description}}{% endblock %}
{% block twimage %}{{ about.cover}}{% endblock %}
{% block fbimage %}{{ about.cover}}{% endblock %}
{% block body %}
<div class="col-12 p-3 p-md-5">
<h1 class="text-center"><strong><a href="/about">{{ about.title }}</a></strong></h1>
<img class="img-fluid " width="100%" alt="{{ about.title }}" src="{{ about.cover }}"/>
<h3>{{ about.description }}</h3>
<p>{{ about.content }}</p>
</div>
{% endblock %}
