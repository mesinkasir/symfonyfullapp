{% extends 'base.html.twig' %}
{% block title %}{{ gallery.title }}{% endblock %}
{% block fbtitle %}{{ gallery.title }}{% endblock %}
{% block twtitle %}{{ gallery.title }}{% endblock %}
{% block ogtitle %}{{ gallery.title }}{% endblock %}
{% block description %}{{ gallery.description}}{% endblock %}
{% block fbdescription %}{{ gallery.description}}{% endblock %}
{% block twdescription %}{{ gallery.description}}{% endblock %}
{% block ogdescription %}{{ gallery.description}}{% endblock %}
{% block twimage %}{{ gallery.ImageUrl}}{% endblock %}
{% block fbimage %}{{ gallery.ImageUrl}}{% endblock %}
{% block body %}
<div class="col-12 p-3 p-md-5">
<h1 class="text-center"><strong><a href="/gallery/">{{ gallery.title }}</a></strong></h1>
<img class="img-fluid " alt="{{ gallery.title }}" src="{{ gallery.ImageUrl }}"/>
<h3>{{ gallery.description }}</h3>
</div>
<div class="p-1 text-center">
<a class="btn btn-dark text-white" href="{{ path('gallery_index') }}">back to gallery</a>
</div>
{% endblock %}
